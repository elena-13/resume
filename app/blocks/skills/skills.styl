.skills
	display block
	padding-top 73px

.skills__descr
	flex 1
.skills__title
	margin 0 0 18px
	padding 0	
	font-family $font-bold
	font-size 24px
	color $font-color
.skills__help
	margin 0
	color $font-color-gray
	font-size 15px	
	line-height 23px	
	text-align left


.checkbox
	padding-left 0
	padding-right 0	
	display flex
	flex-direction row
	padding-top 35px

.checkbox__col
	flex-direction column
	flex 1

.checkbox__list
	margin 0
	padding 0
	overflow hidden

.checkbox__item	
	padding 7px 0
	display block

.checkbox__input
	display none
	&:checked+label
		&:after
			opacity 1	

.checkbox__label
	padding-left 25px
	position relative
	cursor pointer
	display inline-block
	font-size 20px
	color $font-color-black
	font-family $font-bold 
	&:after, &:before
		position absolute
		display block
		top 8px
		left 0
		content ''
	&:before
		sprite($checkbox) 
	&:after 
		content ''
		opacity 0
		sprite($checkmark) 
		position absolute
		transition all .50s
		top -2px
		left 1px
.checkbox__link
	color $accent-color
	transition color .3s ease
	cursor pointer
	text-decoration underline
	&:hover 
		color red