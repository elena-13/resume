.purpose
	display block
	padding-top 73px
.purpose__descr
	flex 1
.purpose__title
	margin 0 0 18px
	padding 0	
	font-family $font-bold
	font-size 24px
	color $font-color
.purpose__help
	margin 0
	color $font-color-gray
	font-size 15px	
	line-height 23px	
	text-align left

.radiobtn
	display flex
	padding-top: 35px
.radiobtn__list
	display flex
	width 100%
.radiobtn__item	
	margin-right 20px
.radiobtn__wrapper
	font-size 20px
	color $font-color-black
	font-family $font-bold
	display block	

.radiobtn__input
	vertical-align top
	margin 0 3px 0 0
	display none
	&:not(checked) 
		position absolute
		opacity 0
	&:not(checked) + label 
		position relative
		padding 0 0 0 35px
	&:not(checked) + label::before 
		content ''
		position absolute
		top -3px
		left 0 
		sprite($radiocircle)			
	&:not(checked) + label::after 
		content ''
		position absolute
		top 5px
		left 7px
		border-radius 50%
		sprite($radiopoint)
		transition all 0.50s
		opacity 0
	&:checked + label::after 
		opacity 1
	&:focus + label::before 
		box-shadow:0 0 0 3px rgba(255,255,0,.5)	