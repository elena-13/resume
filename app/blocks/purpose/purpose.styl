.purpose
	display block
	padding-top 73px
.purpose__descr
	flex 1
.purpose__title
	margin 0 0 18px
	padding 0	
	font-family $font-bold
	font-size 24px
	color $font-color
.purpose__help
	margin 0
	color $font-color-gray
	font-size 15px	
	line-height 23px	
	text-align left

.radiobtn
	display flex
.radiobtn__list
	list-style none
	margin 0
	padding 0
	display flex
	width 100%
.radiobtn__item	
	margin-right 20px
.radiobtn__col
	font-size 20px
	color $font-color-black
	font-family $font-bold
	display block	

.radiobtn__label
	font-family $font-bold
	font-size 22px
	color $font-color
	display inline-block
	cursor pointer
	position relative
	padding-left $circle_width
	&:before
		content ""
		display inline-block
		margin-right 10px
		position absolute
		left 0px
		top -12px
		sprite($radiocircle)

.user__radio:checked + .user__label:before
	content ""
	top -12px
	left 0px
	sprite($radiopoint)		